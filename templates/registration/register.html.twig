{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    {% include '/header.html.twig' %}
    <div class="container-fluid">
        <h1 class="text-center">Créer un compte</h1>
        <div class="row">
            <div class="col-sm-12 p-4">
                {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.name) }}
                    </div>
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.fname) }}
                    </div>
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.birth_d) }}
                    </div>
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password'
                        }) }}
                    </div>
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.adress) }}
                    </div>
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.city) }}
                    </div>
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.postal_c) }}
                    </div>
                    <div class="col-sm-6 mt-1">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>
                    <div class="mx-auto text-center">
                        <button type="submit" class="btn btn-success btn-lg">S'enregistrer</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
