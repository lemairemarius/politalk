{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="container-fluid">
            <div class="cnt">
                <div class="cntLogin">
                    <h1 class="h3 mb-3 font-weight-normal text-center mt-4">Veuillez-vous connecter</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                           autocomplete="email" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           autocomplete="current-password"
                           required>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" class="mt-3" name="_remember_me"> Se rappeler de moi
                        </label>
                    </div>
                    <div class="text-center mx-auto">
                        <button class="btn btn-lg btn-primary btnSize" type="submit">Connexion</button>
                        <a href="/register">
                            <button class="btn btn-lg btn-secondary btnSize" type="button">S'inscrire
                            </button>
                    </div>
                    </a>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
